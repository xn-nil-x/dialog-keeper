# ==============================================
# ШАБЛОН ПЕРЕМЕННЫХ ОКРУЖЕНИЯ
# ==============================================
# Скопируйте этот файл в .env и заполните реальными значениями
# .env файл НЕ будет виден AI и НЕ попадёт в Git

# ==============================================
# TELEGRAM BOT
# ==============================================
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=0123456789abcdef0123456789abcdef

# Bot Settings
BOT_USERNAME=your_bot_username
BOT_ADMIN_IDS=123456789,987654321

# ==============================================
# AI / LLM PROVIDERS
# ==============================================

# OpenAI
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ==============================================
# KAITEN SERVICE DESK
# ==============================================
KAITEN_API_TOKEN=your_kaiten_api_token_here
KAITEN_API_URL=https://your-company.kaiten.ru/api/v1
KAITEN_BOARD_ID=12345
KAITEN_DEFAULT_COLUMN_ID=67890

# ==============================================
# БАЗА ДАННЫХ
# ==============================================
DATABASE_URL=sqlite:///./dialog_keeper.db
POSTGRES_USER=dialog_keeper
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=dialog_keeper
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ==============================================
# VECTOR DATABASE (для RAG)
# ==============================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_COLLECTION=dialog_keeper_knowledge

# ==============================================
# SPEECH-TO-TEXT
# ==============================================
WHISPER_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
WHISPER_MODEL=base

# ==============================================
# REDIS
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=INFO
LOG_FILE=logs/dialog_keeper.log
SENTRY_DSN=https://xxxxx@o123456.ingest.sentry.io/123456

# ==============================================
# ПРИЛОЖЕНИЕ
# ==============================================
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-super-secret-key-change-me
COMPANY_NAME=Your Company Name
COMPANY_TIMEZONE=Europe/Moscow
